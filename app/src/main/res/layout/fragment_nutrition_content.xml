<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/icerik_resmi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"

        >
    </ImageView>
    <TextView
        android:id="@+id/besinismi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nutrition Name"
        android:layout_below="@+id/icerik_resmi"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

    </TextView>
    <TextView
        android:id="@+id/kaloriismi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kCAL"
        android:layout_below="@+id/besinismi"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

    </TextView>
    <TextView
        android:id="@+id/karbonhidratmiktari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carbonhydrate Amount"
        android:layout_below="@+id/kaloriismi"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

    </TextView>
    <TextView
        android:id="@+id/proteinmiktari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Protein Amount"
        android:layout_below="@+id/karbonhidratmiktari"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

    </TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fat Amount"
        android:layout_below="@+id/proteinmiktari"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

    </TextView>

</RelativeLayout>
